<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
    PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
    "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <classPathEntry location="/home/phoenix/.m2/repository/mysql/mysql-connector-java/5.1.35/mysql-connector-java-5.1.35.jar"/>

  <context id="MySQL" targetRuntime="MyBatis3Simple" defaultModelType="hierarchical">
    <property name="beginningDelimiter" value="`"/>
    <property name="endingDelimiter" value="`"/>
    <!-- 控制注释生成 -->
    <commentGenerator>
      <property name="suppressAllComments" value="true"/>
      <property name="suppressDate" value="true"/>
    </commentGenerator>

    <jdbcConnection
        driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql://localhost/spitter"
        userId="root"
        password="cloudSoft@Skybility">
    </jdbcConnection>

    <!-- 生成Java 实体 -->
    <javaModelGenerator targetPackage="test.model" targetProject="/" >
      <property name="rootClass" value="me.phx.model.AbstractEntity"/>
    </javaModelGenerator>

    <!-- 生成XML Mapper -->
    <sqlMapGenerator targetPackage="test.xml" targetProject="/">
    </sqlMapGenerator>

    <!-- 生成Java Mapper 接口 -->
    <javaClientGenerator targetPackage="test.mapper" targetProject="/" type="XMLMAPPER">
      <property name="rootInterface" value="me.phx.mybatis.mapper.BaseMapper" />
    </javaClientGenerator>

    <table tableName="Device" domainObjectName="Device" >
      <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
      <columnOverride column="type" property="deviceType" javaType="me.phx.model.enums.DeviceType"/>
    </table>

    <table tableName="House" >
      <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
      <columnOverride column="size" property="houseSize" javaType="me.phx.model.enums.HouseSize"/>
      <columnOverride column="ip_address" property="ipAddress" javaType="java.lang.String"/>
    </table>

    <table tableName="%">
      <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
    </table>
  </context>
</generatorConfiguration>