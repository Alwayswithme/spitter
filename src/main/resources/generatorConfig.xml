<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
    PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
    "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <classPathEntry location="./target/classes"/>

  <context id="MySQL" targetRuntime="MyBatis3Simple" >
    <property name="beginningDelimiter" value="`"/>
    <property name="endingDelimiter" value="`"/>
    <!-- 控制注释生成 -->
    <commentGenerator>
      <property name="suppressAllComments" value="true"/>
      <property name="suppressDate" value="true"/>
    </commentGenerator>

    <jdbcConnection
        driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql://localhost/spitter"
        userId="root"
        password="cloudSoft@Skybility">
    </jdbcConnection>

    <!-- 生成Java 实体 -->
    <javaModelGenerator targetPackage="me.phx.model" targetProject="./src/main/java" >
      <property name="rootClass" value="me.phx.model.AbstractEntity"/>
    </javaModelGenerator>

    <!-- 生成XML Mapper -->
    <sqlMapGenerator targetPackage="me.phx.mapper" targetProject="./src/main/resources">
    </sqlMapGenerator>

    <!-- 生成Java Mapper 接口 -->
    <javaClientGenerator targetPackage="me.phx.mapper" targetProject="./src/main/java" type="XMLMAPPER">
      <property name="rootInterface" value="me.phx.mapper.BaseMapper" />
    </javaClientGenerator>

    <table tableName="Person">
      <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
      <columnOverride column="created_date" javaType="java.time.LocalDateTime"/>
    </table>

    <table tableName="Device" domainObjectName="Device"  >
      <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
      <columnOverride column="type" property="type" javaType="Type"/>
    </table>

    <table tableName="House" >
      <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
      <columnOverride column="size" property="size" javaType="Size"/>
      <columnOverride column="ip_address"  javaType="java.lang.String"/>
    </table>

  </context>
</generatorConfiguration>